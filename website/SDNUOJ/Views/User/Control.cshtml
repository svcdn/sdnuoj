@model SDNUOJ.Entity.UserEntity

@{
    ViewBag.__Title = "用户设置";
}

<div class="page-title row text-center">
    <h2>User Control Panel</h2>
</div>

@using (Html.BeginForm("Control", "User", FormMethod.Post, new { @data_verify = "true" }))
{
    <table class="table table-striped table-condensed table-nohead">
        <thead>
            <tr>
                <td colspan="2" class="text-center">
                    <span class="label label-primary">提示</span>
                    <span>当您不希望设置新的密码时，请将“新密码”一项留空。</span>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="td-firstcol"><span class="star">*</span> 当前密码</td>
                <td><input name="password" type="password" maxlength="20" class="form-control input-middle" required="required" data-emptyinfo="当前密码不能为空！" /></td>
            </tr>
            <tr>
                <td class="td-firstcol">新密码</td>
                <td><input id="txt-password" name="newpassword" type="password" maxlength="20" class="form-control input-middle" /></td>
            </tr>
            <tr>
                <td class="td-firstcol">验证新密码</td>
                <td><input name="newpassword2" type="password" maxlength="20" class="form-control input-middle" data-comparedto="txt-password" data-notequalinfo="两次输入的新密码不匹配！" /></td>
            </tr>
            <tr>
                <td class="td-firstcol">昵称</td>
                <td><input name="nickname" type="text" maxlength="40" class="form-control input-middle" value="@Html.Raw(Model.NickName)" /></td>@*!TIP:User.NickName添加时已Encode*@
            </tr>
            <tr>
                <td class="td-firstcol">学校</td>
                <td><input name="school" type="text" maxlength="40" class="form-control input-middle" value="@Model.School" /></td>
            </tr>
            <tr>
                <td class="td-firstcol"><span class="star">*</span> 电子邮箱</td>
                <td><input name="email" type="email" maxlength="40" class="form-control input-middle" value="@Model.Email" required="required" data-emptyinfo="电子邮箱不能为空！" data-regex="^[\w-]+(\.[\w-]+)*@@[\w-]+(\.[\w-]+)+$" data-invalidinfo="电子邮箱无效！" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-primary">提交</button>
                    <button type="reset" class="btn btn-default">重填</button>
                </td>
            </tr>
        </tfoot>
    </table>
}
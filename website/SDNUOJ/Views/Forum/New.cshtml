@{
    ViewBag.__Title = "发表新帖";
}

@using (Html.BeginForm("New", "Forum", FormMethod.Post, new { @class = "form-horizontal", @data_verify = "true" }))
{
    @Html.AntiForgeryToken()
    <div class="dtable dtable-striped">
        <div class="dhead">
            <div class="row text-center">
                <h2>发表新帖</h2>
            </div>
        </div>
        <div class="dbody">
            @if (!String.IsNullOrEmpty(ViewBag.ProblemID))
            {
            <div class="row">
                <label for="pid" class="col-sm-2 control-label"><span class="star">*</span>  题目 ID</label>
                <div class="col-sm-8">
                    <input id="pid" name="pid" type="text" maxlength="100" class="form-control" value="@ViewBag.ProblemID" required="required" readonly="readonly" />
                </div>
            </div>
            }
            <div class="row">
                <label for="title" class="col-sm-2 control-label"><span class="star">*</span> 标题</label>
                <div class="col-sm-8">
                    <input id="title" name="title" type="text" maxlength="100" class="form-control" required="required" placeholder="帖子标题" data-emptyinfo="标题不能为空！" />
                </div>
            </div>
            <div class="row">
                <label for="content" class="col-sm-2 control-label"><span class="star">*</span> 正文</label>
                <div class="col-sm-8">
                    <textarea id="content" name="content" class="form-control" rows="10" required="required" placeholder="您的正文" data-quicksubmit="true" data-emptyinfo="帖子正文不能为空！"></textarea>
                </div>
            </div>
        </div>
        <div class="dfoot">
            <div class="row text-center">
                <button type="submit" class="btn btn-primary">发表</button>
                <button type="reset" class="btn btn-default">重写</button>
            </div>
        </div>
    </div>
}
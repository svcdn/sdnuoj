@model SDNUOJ.Entity.ProblemEntity

@{
    ViewBag.__Title = "提交代码";
    ViewBag.__Type = "submitcode";
}

@using (Html.BeginForm("Submit", "Solution", new { id = Model.ProblemID }, FormMethod.Post, new { @data_verify = "true" }))
{
    @Html.AntiForgeryToken()
    <div class="dtable dtable-striped">
        <div class="dhead">
            <div class="row text-center">
                <h2>提交代码</h2>
            </div>
        </div>
        <div class="dbody">
            <div class="row">
                <div class="td-firstcol submit-bar col-xs-6">
                    <span>题目 ID:</span>
                    <input class="form-control input-short" value="@Model.ProblemID" readonly="readonly" />&nbsp;&nbsp;
                </div>
                <div class="submit-bar col-xs-6">
                    &nbsp;&nbsp;
                    <span>程序语言:</span>
                    @Html.DropDownList("lang", ViewBag.Languages as IEnumerable<SelectListItem>, new { @class = "form-control input-short", @data_emptyinfo = "程序语言不能为空！" })
                </div>
            </div>
            <div class="row" style="padding:0;">
                <textarea name="code" class="form-control" rows="15" placeholder="//将您的代码粘贴到这里，请注意不能有任何中文出现" data-codeeditor="true"></textarea>
            </div>
        </div>
        <div class="dfoot">
            <div class="row text-center">
                <button type="submit" class="btn btn-primary">提交</button>
                <button type="reset" class="btn btn-default">重填</button>
            </div>
        </div>
    </div>
}
<link href="/static/css/foundation/codemirror-5.2.custom.min.css" type="text/css" rel="stylesheet" />
<script src="/static/js/foundation/codemirror-package-5.2.min.js" type="text/javascript"></script>
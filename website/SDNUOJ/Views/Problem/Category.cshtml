@model List<SDNUOJ.Entity.ProblemCategoryEntity>

@{
    ViewBag.__Title = "题目分类";
}

<div class="dtable dtable-striped dtable-hover dtable-nofoot" style="margin-bottom:28px;">
    <div class="dhead">
        <div class="row text-center">
            <h2>题目分类</h2>
        </div>
        <div class="row">
            <div class="col-sm-1 col-xs-2 text-center">ID</div>
            <div class="col-sm-5 col-xs-10">分类名</div>
            <div class="col-sm-1 col-xs-2 hidden-xs text-center">ID</div>
            <div class="col-sm-5 col-xs-10 hidden-xs">分类名</div>
        </div>
    </div>
    <div class="dbody">
    @for (Int32 i = 0; i < Model.Count; i += 2)
    {
        <div class="row">
            <div class="col-sm-1 col-xs-2 text-center">
                @(i + 1)
            </div>
            <div class="col-sm-5 col-xs-10">
                <a href="@Url.Action("Search", "Problem", new { type = "category", content = Model[i].TypeID })">@Model[i].Title</a>
            </div>
            <div class="col-sm-1 col-xs-2 text-center">
                @(i + 1 < Model.Count ? (i + 2).ToString() : "")
            </div>
            <div class="col-sm-5 col-xs-10">
                @if (i + 1 < Model.Count) { <a href="@Url.Action("Search", "Problem", new { type = "category", content = Model[i + 1].TypeID })">@Model[i + 1].Title</a> }
            </div>
        </div>
    }
    @if (Model.Count == 0)
    {
        <div class="row text-center">
            暂无题目分类
        </div>
    }
    </div>
</div>
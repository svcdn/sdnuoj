@model SDNUOJ.Entity.ContestEntity

@{
    ViewBag.__Title = "Contest Register";
}

<div class="page-title row text-center">
    <h2>@Model.Title Register</h2>
</div>

@using (Html.BeginForm("Register", "Contests", new { id = Model.ContestID }, FormMethod.Post, new { @data_verify = "true" }))
{
    @Html.AntiForgeryToken()
    <table class="table table-striped table-condensed table-nohead">
        <thead>
            <tr>
                <td colspan="2" class="text-center">
                    <span class="label label-primary">提示</span>
                    <span>Please fill in the blank below, "<span class="star">*</span>" is necessary.</span>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="td-firstcol">Contest Type</td>
                <td><span class="label contest_@Model.ContestType">@Model.ContestTypeString</span></td>
            </tr>
            <tr>
                <td class="td-firstcol"><span class="star">*</span> Username</td>
                <td><input type="text" class="form-control input-middle" readonly="readonly" value="@ViewBag.UserName" /></td>
            </tr>
            <tr>
                <td class="td-firstcol"><span class="star">*</span> Real Name</td>
                <td><input name="realname" type="text" maxlength="20" class="form-control input-middle" required="required" data-emptyinfo="Real name can not be NULL!" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2" class="text-center">
                    <button type="submit" class="btn btn-primary">提交</button>
                    <button type="reset" class="btn btn-default">重填</button>
                </td>
            </tr>
        </tfoot>
    </table>
}
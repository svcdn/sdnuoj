@model SDNUOJ.Utilities.PagedList<SDNUOJ.Entity.NewsEntity>

@{
    ViewBag.__Title = "公告列表";
}

<div class="page-title row text-center">
    <h2>公告列表</h2>
</div>

<table class="table table-striped table-hover table-nohead table-nofoot">
    <thead>
        <tr>
            <th class="td-newsid text-center">NID</th>
            <th>标题</th>
            <th class="td-newsdate text-center">时间</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var Item in Model)
    {
        <tr>
            <td class="text-center">@Item.AnnounceID</td>
            <td><a href="@Url.Action("Detail", "News", new { id = Item.AnnounceID })">@Item.Title</a></td>
            <td class="text-center">@Item.PublishDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
        </tr>
    }
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="3" class="text-center">暂无公告</td>
        </tr>
    }
    </tbody>
</table>

<div class="page-bottom row text-center">
    @RenderPage("~/Views/Shared/_SimplePager.cshtml")
</div>
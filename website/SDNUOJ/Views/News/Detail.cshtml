@model SDNUOJ.Entity.NewsEntity

@{
    ViewBag.__Title = "公告" + ((Model != null && !String.IsNullOrEmpty(Model.Title)) ? " - " + Model.Title : "");
}

<div class="dtable dtable-striped">
    <div class="dhead">
        <div class="row text-center">
            <h2>@Model.Title</h2>
        </div>
    </div>
    <div class="dbody">
        <div class="row row-fat">
            @Html.Raw(Model.Description)
        </div>
    </div>
    <div class="dfoot">
        <div class="row">
            <div class="callout-right text-right">发布于: @Model.PublishDate.ToString("yyyy-MM-dd HH:mm:ss")</div>
        </div>
    </div>
</div>
@{
    ViewBag.__Title = "系统消息";
}

<div class="dtable">
    <div class="dhead">
        <div class="row text-center">
            <h2>系统消息</h2>
        </div>
    </div>
    <div class="dbody">
        <div class="row">
            <div class="alert alert-full alert-@(String.IsNullOrEmpty(ViewBag.Style) ? "warning" : ViewBag.Style) text-center">
                @Html.Raw((String.IsNullOrEmpty(ViewBag.Description) || String.IsNullOrEmpty(HttpUtility.UrlDecode(ViewBag.Description.Trim()))) ? "(# ゜Д゜)" : HttpUtility.UrlDecode(ViewBag.Description.Trim()))
            </div>
        </div>
    </div>
    <div class="dfoot">
        <div class="row text-center">
            <a class="btn btn-default" href="@Html.Raw(String.IsNullOrEmpty(ViewBag.BackUrl) ? "javascript:void(0);" : ViewBag.BackUrl)" @Html.Raw(String.IsNullOrEmpty(ViewBag.BackUrl) ? "onclick=\"history.go(-1);\"" : "")>返回</a>
        </div>
    </div>
</div>